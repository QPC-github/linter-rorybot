{
  "name": "linter-rorybot",
  "version": "0.2.0",
  "description": "Atom linter plugin using rorybot to catch Shopify style guide violations",
  "license": "ISC",
  "private": true,
  "author": {
    "name": "Adam Hollett and Jeremy Hanson-Finger",
    "email": "docsteam@shopify.com",
    "url": "http://www.shopify.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/linter-rorybot.git"
  },
  "bugs": "https://github.com/Shopify/linter-rorybot/issues",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "rory": "git+ssh://git@github.com:Shopify/rorybot.git",
    "atom-package-deps": "^3.0.0",
    "minimatch": "^3.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "eslint": "^1.1.0",
    "jscs": "^2.1.0",
    "jscs-jsdoc": "^1.1.0",
    "remark": "^3.0.0",
    "remark-comment-config": "^2.0.0",
    "remark-github": "^4.0.0",
    "remark-lint": "^2.0.0",
    "remark-slug": "^4.0.0",
    "remark-validate-links": "^2.0.0"
  },
  "scripts": {
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "build-md": "remark . --quiet",
    "build": "npm run build-md",
    "test": "npm run build && npm run lint"
  }
}
